{
  "build": {
    "beforeDevCommand": "pnpm package && pnpm dev",
    "beforeBuildCommand": "pnpm build && pnpm package",
    "devPath": "http://localhost:4321",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "uncomplicated",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
				"sidecar": true,
				"scope": [
					{
						"name": "binaries/app",
						"sidecar": true
					}
				]
			}
    },
    "bundle": {
			"active": true,
			"targets": "all",
			"identifier": "dev.uncomplicated.astro",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"externalBin": ["binaries/app"]
		},
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Uncomplicated",
        "width": 800,
        "height": 600
      }
    ]
  }
}
